"*":
  "atom-beautify":
    bash:
      beautify_on_save: true
    css:
      beautify_on_save: true
    html:
      beautify_on_save: true
      indent_inner_html: true
    java:
      beautify_on_save: true
    js:
      beautify_on_save: true
    python:
      beautify_on_save: true
    sql:
      beautify_on_save: true
  "color-picker":
    automaticReplace: true
    uppercaseColorValues: true
  core:
    telemetryConsent: "no"
  "exception-reporting":
    userId: "puppet"
  "linter-ui-default":
    showPanel: true
  minimap:
    displayMinimapOnLeft: true
    moveCursorOnMinimapClick: true
  pigments:
    extendAutocompleteToColorValue: true
